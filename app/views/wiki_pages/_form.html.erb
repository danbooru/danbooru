<div id="form-content">
  <%= error_messages_for("wiki_page") %>

  <%= simple_form_for(@wiki_page) do |f| %>
    <%= f.input :title, :as => :string %>
    
    <%= dtext_field "wiki_page", "body" %>

    <% if CurrentUser.is_janitor? %>
      <%= f.input :is_locked %>
    <% end %>

    <%= f.button :submit, "Submit" %>
    <%= dtext_preview_button "wiki_page", "body" %>
  <% end %>
</div>

