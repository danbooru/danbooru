<div id="c-tag-aliases">
  <div id="a-show">
    <h1>Tag Alias: <%= @tag_alias.antecedent_name %> -&gt; <%= @tag_alias.consequent_name %></h1>

    <ul>
      <li><strong>From</strong> <%= link_to @tag_alias.antecedent_name, posts_path(:tags => @tag_alias.antecedent_name) %></li>
      <li><strong>To</strong> <%= link_to @tag_alias.consequent_name, posts_path(:tags => @tag_alias.consequent_name) %></li>
      <li><strong>Status</strong>: <%= @tag_alias.status %></li>
      <% if @tag_alias.forum_topic_id || @tag_alias.forum_post_id %>
        <li><strong>Reference</strong>:
          <% if @tag_alias.forum_topic_id %>
            <% if @tag_alias.forum_post_id && @tag_alias.forum_topic.posts.first.id != @tag_alias.forum_post_id %>
              <%= link_to(@tag_alias.forum_topic.title, forum_topic_path(@tag_alias.forum_topic_id, :page => @tag_alias.forum_post.forum_topic_page, :anchor => "forum_post_#{@tag_alias.forum_post_id}")) %>
            <% else %>
              <%= link_to(@tag_alias.forum_topic.title, forum_topic_path(@tag_alias.forum_topic_id)) %>
            <% end %>
          <% end %>
        </li>
      <% end %>
      <li><strong>Creator</strong> <%= link_to_user @tag_alias.creator %></li>
      <% if @tag_alias.approver %>
        <li><strong>Approver</strong>: <%= link_to_user @tag_alias.approver %></li>
      <% end %>
      <li>
        <strong>Date</strong>: <%= compact_time @tag_alias.created_at %>
        <% if @tag_alias.updated_at - @tag_alias.created_at > 5.minutes %>
          (<span class="tn">Updated <%= time_ago_in_words_tagged(@tag_alias.updated_at) %></span>)
        <% end %>
      </li>
      <% if @tag_alias.respond_to?(:reason) && @tag_alias.reason.present? %>
        <li><strong>Reason</strong> <%= format_text @tag_alias.reason %></li>
      <% end %>
    </ul>
  </div>
</div>

<%= render "secondary_links" %>

<% content_for(:page_title) do %>
  Tag Alias - <%= Danbooru.config.app_name %>
<% end %>