<div id="c-uploads" class="h-full">
  <div id="a-show" class="h-full">
    <% if @upload.media_asset_count == 0 %>
      <% if @upload.is_errored? %>
        <p>Error: <%= @upload.error %>.</p>
      <% else %>
        <p>Processing upload...</p>

        <% content_for(:html_header) do %>
          <meta http-equiv="refresh" content="1">
        <% end %>
      <% end %>
    <% elsif @upload.media_asset_count == 1 %>
      <div id="p-single-asset-upload" class="h-full">
        <%= render "uploads/single_asset_upload", upload_media_asset: @upload.upload_media_assets.first, post: @post %>
      </div>
    <% end %>
  </div>
</div>

<%= render "uploads/secondary_links" %>
