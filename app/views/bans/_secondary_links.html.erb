<% content_for(:secondary_links) do %>
  <menu>
    <li><%= link_to "Listing", bans_path %></li>
    <li><%= link_to "Ban", new_ban_path %></li>
    <% if @ban && !@ban.new_record? && CurrentUser.is_moderator? %>
      <li>|</li>
      <li><%= link_to "Edit", edit_ban_path(@ban) %></li>
      <li><%= link_to "Delete", ban_path(@ban), :method => :delete, :data => {:confirm => "Are you sure you want to delete this user ban?"} %></li>
    <% end %>
  </menu>
<% end %>
