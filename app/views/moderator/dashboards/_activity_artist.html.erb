<table class="striped">
  <caption>Artist Updates</caption>
  <thead>
    <tr>
      <th>User</th>
      <th>Count</th>
    </tr>
  </thead>
  <tbody>
    <% @dashboard.artists.each do |activity| %>
      <tr>
        <td><%= mod_link_to_user(activity.user, :positive) %></td>
        <td><%= link_to activity.count, artist_versions_path(:search => {:updater_id => activity.user.id}) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
