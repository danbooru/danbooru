    <section class="flex-auto space-y-4">
      <% if Danbooru.config.comments_enabled?.to_s.truthy? %>
        <ul>
          <li><h2>Comments</h2></li>
          <li><%= link_to("Comments", comments_path) %></li>
          <li><%= link_to("Search", comments_path(group_by: "comment")) %></li>
